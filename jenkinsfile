pipeline {
    agent any

    stages {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'MAVEN') {
                 
                echo "JJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJ"
                   script{   
                       
                       def lst = [];
    def changeLogSets = currentBuild.changeSets
for (int i = 0; i < changeLogSets.size(); i++) {
    def entries = changeLogSets[i].items
    for (int j = 0; j < entries.length; j++) {
        def entry = entries[j]
        echo  "file path started..."
        echo "${entry.commitId} by ${entry.author} on ${new Date(entry.timestamp)}: ${entry.msg}"
        def files = new ArrayList(entry.affectedFiles)
        for (int k = 0; k < files.size(); k++) {
            def file = files[k]
            echo  "file path started..."
            echo "${file.path}"
                   String a={file.path};
                    String[] str;
                  str = a.split("/");
                 
                  
                  lst.add(str[0]);
                  echo str[0];
                  echo "roooooooooot"
                  echo "${file.path}"
                  print str[0];
                  echo "roooooooooot"

            echo  "file path ended  ..."
        }
    }
}
                echo "JJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJJ"

                }
            }
        }

}
        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'MAVEN') {
                    bat 'mvn -f SpringBootRestApiExample/pom.xml install'
                   bat 'java -jar SpringBootRestApiExample/target/SpringBootRestApiExample-1.0.0.jar'
                }
            }
        }
    }
}



